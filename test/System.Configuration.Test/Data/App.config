<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="appSettings" type="System.Configuration.AppSettingsSection, System.Configuration"/>
    <section name="connectionStrings" type="System.Configuration.ConnectionStringsSection, System.Configuration"/>
    <section name="pageAppearance" type="System.Configuration.Test.PageAppearanceSection, System.Configuration.Test" allowLocation="true" allowDefinition="Everywhere"/>
    <section name="pageAppearanceEmpty" type="System.Configuration.Test.PageAppearanceSection, System.Configuration.Test" allowLocation="true" allowDefinition="Everywhere"/>
    <section name="pageAppearanceTooLongString" type="System.Configuration.Test.PageAppearanceSection, System.Configuration.Test" allowLocation="true" allowDefinition="Everywhere"/>
    <section name="pageAppearanceTooShortString" type="System.Configuration.Test.PageAppearanceSection, System.Configuration.Test" allowLocation="true" allowDefinition="Everywhere"/>
    <section name="pageAppearanceInvalidChar" type="System.Configuration.Test.PageAppearanceSection, System.Configuration.Test" allowLocation="true" allowDefinition="Everywhere"/>
    <section name="employeesConfig" type="System.Configuration.Test.EmployeesConfigSection, System.Configuration.Test"/>
    <section name="simpleConfig" type="System.Configuration.Test.SimpleConfigSection, System.Configuration.Test"/>
  </configSections>

  <appSettings>
    <add key="Setting1" value="Value1"/>
    <add key="Setting2" value="Value2"/>
  </appSettings>

  <connectionStrings configSource="connectionStrings.config" />

  <pageAppearance remoteOnly="false">
    <font name="TimesNewRoman" size="15"/>
    <color foreground="FFDDAA" background="AAAAAA" />
  </pageAppearance>

  <pageAppearanceEmpty />

  <pageAppearanceTooLongString>
    <color foreground="FFDDAAAA" />
  </pageAppearanceTooLongString>

  <pageAppearanceTooShortString>
    <color foreground="FF" />
  </pageAppearanceTooShortString>

  <pageAppearanceInvalidChar>
    <color foreground="FFTTAA" />
  </pageAppearanceInvalidChar>

  <employeesConfig>
    <employees>
      <employee EmployeeID="alincoln" FirstName="abraham" LastName="lincoln" />
      <employee EmployeeID="gwashington" FirstName="george" LastName="washington" />
      <employee EmployeeID="gbush" FirstName="george" LastName="bush" />
    </employees>
  </employeesConfig>

  <simpleConfig />

</configuration>